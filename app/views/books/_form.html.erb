<section>
    <%= form_with model: book, local: true do |form| %>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
      </div>
       <div>
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>
       <div>
        <%= form.label :release %>
        <%= form.datetime_field :release %>
      </div>
      <div>
        <%= form.submit %>
      </div>

    <%end%>
  </section>
